.main
  .container
    .row
      .col-sm-9.col-md-7.col-lg-5.mx-auto
        .card.card-signin.my-5
          .card-body
            %h5.card-title.text-center Log In
            .form-label-group
              = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
                .field
                  = f.label :email
                  %br/
                  = f.email_field :email,placeholder: "Email Address", autofocus: true, autocomplete: "email", class: "form-control"
                .field
                  = f.label :password
                  %br/
                  = f.password_field :password,placeholder: "Password", autocomplete: "off", class: "form-control"
                .custom-control.custom-checkbox.mb-3
                  - if devise_mapping.rememberable?
                    .field
                      = f.check_box :remember_me, class: "custom-control-input"
                      = f.label :remember_me, class: "custom-control-label"
                .actions
                  = f.submit "Log in", class: "btn btn-lg btn-block text-uppercase"
              = render "librarians/shared/links"
