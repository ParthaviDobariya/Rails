.main.password
  .container
    .row
      .col-sm-9.col-md-7.col-lg-5.mx-auto
        .card
          %h3.card-header Forgot your password?
          .card-body
            = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
              = devise_error_messages!
              .field.form-group.row
                = f.label :email, class: "col-5 col-form-label"
                .col-7
                  = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
              .actions
                = f.submit "Send me reset password instructions", class: "btn btn-block"
            .link
              = render "librarians/shared/links"
