<p id="notice"><%= notice %></p>

<% if librarian_signed_in? %>
  Logged in as <strong><%= current_librarian.email %></strong>.
  <%= link_to 'Edit profile', edit_librarian_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Logout", destroy_librarian_session_path, method: :delete, :class => 'navbar-link'  %>
<% else %>
  <%= link_to "Sign up", new_librarian_registration_path, :class => 'navbar-link'  %> |
  <%= link_to "Login", new_librarian_session_path, :class => 'navbar-link'  %>
<% end %>
<h1>Librarians</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Mobile no</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @librarians.each do |librarian| %>
      <tr>
        <td><%= librarian.name %></td>
        <td><%= librarian.mobile_no %></td>
        <td><%= librarian.address %></td>
        <td><%= link_to 'Show', librarian %></td>
        <td><%= link_to 'Edit', edit_librarian_registration_path %></td>
        <td><%= link_to 'Destroy', librarian, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Librarian', new_librarian_path %>
