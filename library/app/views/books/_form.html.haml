= form_with(model: book, local: true) do |form|
  - if book.errors.any?
    #error_explanation
      %h2
        = pluralize(book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - book.errors.full_messages.each do |message|
          %li= message
  .field.form-group.row
    = form.label :isbn_no, class: "col-6 col-form-label"
    .col-6
      = form.text_field :isbn_no, class: "form-control"
  .field.form-group.row
    = form.label :title, class: "col-6 col-form-label"
    .col-6
      = form.text_field :title, class: "form-control"
  .field.form-group.row
    = form.label :number_of_books, class: "col-6 col-form-label"
    .col-6
      = form.number_field :number_of_books, class: "form-control"
  .field.form-group.row
    = form.label :publish_date, class: "col-6 col-form-label"
    .col-6
      = form.date_select :publish_date, start_year: Time.now.year-18, end_year: Time.now.year, class: "form-control"
  .field.form-group.row
    = form.label :pages, class: "col-6 col-form-label"
    .col-6
      = form.number_field :pages, class: "form-control"
  .field.form-group.row
    = form.label :publication_id, class: "col-6 col-form-label"
    .col-6
      = form.select("publication_id", Publication.all.collect{ |p| [p.name, p.id]}, {}, {class: "form-control"})
  .field
    = form.label :image
    = form.file_field :image
  %div
    %p
      %strong Authors :
    #author
      = form.fields_for :books_authors do |author|
        = render 'books_author_fields', f: author
      .links
        = link_to_add_association 'add author', form, :books_authors
  %div
    %p
      %strong Category :
    #category
      = form.fields_for :books_categories do |category|
        = render 'books_category_fields', f: category
      .links
        = link_to_add_association 'add category', form, :books_categories
  .actions
    = form.submit
