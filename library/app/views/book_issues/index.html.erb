<div class="main">  

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <ul class="nav navbar-nav">
        <li id="main_title">Book Issue</li>
      </ul>
      <ul class="nav navbar-nav right">
        <li id="new_link"><%= link_to 'Book Issue', new_book_issue_path, class: " new_link" %></li>
      </ul>
    </div>
  </nav>

  <div class="container"> 
    <div class="row">
      <% @book_issues.each do |book_issue| %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card ">
            <h3 class="card-header"><%= book_issue.book.title %></h3>
            <div class="card-body">
              <div class="form-group row">
                <div class="col-5">
                  User 
                </div>
                <div class="col-7">
                  <%= book_issue.user.name %>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-5">
                  Issue Date 
                </div>
                <div class="col-7">
                  <%= book_issue.issue_date %>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-5">
                  Return Date 
                </div>
                <div class="col-7">
                  <%= book_issue.return_date %>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-8"> 
                  <%= link_to 'Show', book_issue %>
                  <%= link_to 'Edit', edit_book_issue_path(book_issue) %>
                  <%= link_to 'Destroy', book_issue, method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div> 

</div>