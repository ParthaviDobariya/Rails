<div class="main">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @publication.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @publication.address %>
  </p>

  <p>
    <strong>Website:</strong>
    <%= @publication.website %>
  </p>

  <p>
    <strong>Books:</strong>
    <% @publication.books.each do |book| %>
      <%= book.title %>
    <%end%>
  </p>

  <%= link_to 'Edit', edit_publication_path(@publication) %> |
  <%= link_to 'Back', publications_path %>
</div>