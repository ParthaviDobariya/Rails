<div class="main">  
  
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <ul class="nav navbar-nav">
        <li id="main_title">Publication</li>
      </ul>
      <ul class="nav navbar-nav right">
        <li id="new_link"><%= link_to 'Add New Publication', new_publication_path, class: " new_link" %></li>
      </ul>
    </div>
  </nav>

  <div class="container"> 
    <div class="row">
      <% @publications.each do |publication| %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card ">
            <h3 class="card-header"><%= publication.name %></h3>
            <div class="card-body">
              <div class="form-group row">
                <div class="col-5">
                  Name 
                </div>
                <div class="col-7">
                  <%= publication.name %>
                </div>
              </div>
    
              <div class="form-group row">
                <div class="col-5">
                  Address 
                </div>
                <div class="col-7">
                  <%= publication.address %>
                </div>
              </div>

              <div class="form-group row">
                <div class="col-5">
                  Website 
                </div>
                <div class="col-7">
                  <%= publication.website %>
                </div>
              </div>

              <div class="form-group row">
                <div class="col-5">
                  Books 
                </div>
                <div class="col-7">
                  <% publication.books.each do |book| %>
                    <%= book.title %> 
                  <% end %>
                </div>
              </div>
    
              <div class="form-group row">
                <div class="col-8"> 
                  <%= link_to 'Show', publication %>
                  <%= link_to 'Edit', edit_publication_path(publication) %>
                  <%= link_to 'Destroy', publication, method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
              </div>
    
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div> 

</div>