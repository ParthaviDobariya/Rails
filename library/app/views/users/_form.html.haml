= form_with(model: user, local: true) do |form|
  - if user.errors.any?
    #error_explanation
      %h2
        = pluralize(user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - user.errors.full_messages.each do |message|
          %li= message
  .container
    .row
      .col-sm-9.col-md-7.col-lg-8.mx-auto
        .card
          .card-body
            .field.form-group.row
              = form.label :name, class: "col-6 col-form-label"
              .col-6
                = form.text_field :name, class: "form-control"
            .field.form-group.row
              = form.label :mobile_no, class: "col-6 col-form-label"
              .col-6
                = form.text_field :mobile_no, class: "form-control"
            .field.form-group.row
              = form.label :email, class: "col-6 col-form-label"
              .col-6
                = form.text_field :email, class: "form-control"
            .field.form-group.row
              = form.label :address, class: "col-6 col-form-label"
              .col-6
                = form.text_field :address, class: "form-control"
            .actions
              = form.submit
