<div class="main"> 

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <ul class="nav navbar-nav">
        <li id="main_title">Users</li>
      </ul>
      <ul class="nav navbar-nav right">
        <li><%= link_to 'Add New User', new_user_path, class: " new_link" %></li>
      </ul>
    </div>
  </nav>

  <div class="container"> 
    <div class="row">
      <% @users.each do |user| %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card ">
            <h3 class="card-header"><%= user.name %></h3>
            <div class="card-body">
              <div class="form-group row">
                <div class="col-5">
                  Mobile 
                </div>
                <div class="col-7">
                  <%= user.mobile_no %>
                </div>
              </div>

              <div class="form-group row">
                <div class="col-5">
                  Email 
                </div>
                <div class="col-7">
                  <%= user.email %>
                </div>
              </div>

              <div class="form-group row">
                <div class="col-5">
                  Address 
                </div>
                <div class="col-7">
                  <%= user.address %>
                </div>
              </div>

              <div class="form-group row">
                <div class="col-5">
                  Books 
                </div>
                <div class="col-7">
                  <% user.books.each do |book| %>
                    <%= book.title %> 
                  <% end %>
                </div>
              </div>
      
              <div class="form-group row">
                <div class="col-8"> 
                  <%= link_to 'Show', user %>
                  <%= link_to 'Edit', edit_user_path(user) %>
                  <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
              </div>
              
            </div>
          </div>    
        </div>
      <% end %>
    </div>
  </div> 

</div>